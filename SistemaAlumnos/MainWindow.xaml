<Window x:Class="SistemaAlumnos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaAlumnos"
        mc:Ignorable="d"
        Title="Inicio" Height="215" Width="350" Loaded="Window_Loaded">
    <Grid Background="#FF34C31D">
        <Button Content="Iniciar" HorizontalAlignment="Left" Margin="128,132,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Foreground="#FF36A830" FontWeight="Bold" />
        <Label Content="Usuario :" HorizontalAlignment="Left" Margin="25,22,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <Label Content="Contraseña :" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
        <TextBox x:Name="txUsuario" HorizontalAlignment="Left" Height="23" Margin="106,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txPassword" HorizontalAlignment="Left" Height="23" Margin="106,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image Source="logo35.png" HorizontalAlignment="Left" Height="64" Margin="267,29,0,0" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.071,0.289"></Image>

    </Grid>
</Window>
